{
  "name": "tyler-doc-agent",
  "version": "0.1.0",
  "description": "AI-powered documentation generation agent that creates comprehensive, high-quality docs for any codebase",
  "main": "dist/index.js",
  "bin": {
    "tyler": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "prompts/**/*"
  ],
  "scripts": {
    "build": "tsc && cp -r templates dist/ && cp -r prompts dist/",
    "dev": "tsx watch src/cli.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "fix": "eslint src --ext .ts --fix && prettier --write 'src/**/*.ts'",
    "check": "tsc --noEmit && npm run lint",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "documentation",
    "ai",
    "agent",
    "claude",
    "docs",
    "documentation-generator",
    "ai-documentation",
    "markdown",
    "github-pages",
    "api-docs",
    "tutorial",
    "developer-tools"
  ],
  "author": "RepoMirror Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/repomirrorhq/tyler-doc-agent.git"
  },
  "bugs": {
    "url": "https://github.com/repomirrorhq/tyler-doc-agent/issues"
  },
  "homepage": "https://github.com/repomirrorhq/tyler-doc-agent#readme",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.89",
    "@types/inquirer": "^9.0.9",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.9.3",
    "ora": "^8.0.1",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
